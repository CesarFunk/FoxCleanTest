@model SystemFacturacion.Models.Product

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registro de Producto</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Producto</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
           <label>Nombre</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
          <label>Categoria</label>
          <div class="col-md-10">
          
              @Html.DropDownListFor(model => model.CategoryID, new SelectList(Model.categoria, "CategoryID", "Name", "CategoryID"), "- Por favor seleccionar -", htmlAttributes: new { @class = "custom-select" })

              @Html.ValidationMessageFor(model => model.CategoryID, "", new { @class = "text-danger" })
          </div>
        </div>

        <div class="form-group">
           <label>Fecha</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control" , @type="date" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Registrar" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>
